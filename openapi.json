            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "start_date",
            "in": "query",
            "description": "Start date",
            "required": false,
            "schema": {
              "type": "string"
            },
            "example": "YYYY-MM-DD"
          },
          {
            "name": "end_date",
            "in": "query",
            "description": "End date",
            "required": false,
            "schema": {
              "type": "string"
            },
            "example": "YYYY-MM-DD"
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Pagination offset",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 0
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Pagination limit",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100
            }
          },
